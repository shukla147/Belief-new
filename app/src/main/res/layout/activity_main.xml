<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tabish.belief.MainActivity"
    android:background="#000">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"


    <Button
        android:text="Take photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/SirenButton"
        android:id="@+id/take_snap"
        android:onClick="clickPhoto"
        android:layout_alignEnd="@+id/SirenButton"
        android:visibility="invisible"/>

    <Button
        android:text="Siren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="siren"
        android:id="@+id/SirenButton"
        android:layout_alignBaseline="@+id/ImHereButton"
        android:layout_alignBottom="@+id/ImHereButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:visibility="invisible"/>

    <Button
        android:text="I'm here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ImHereButton"
        android:onClick="getLocation"
        android:layout_above="@+id/PanicButton"
        android:layout_marginBottom="29dp"
        android:visibility="invisible"/>


    <Button
        android:text="Fake call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FakeCallButton"
        android:onClick="fakeCall"
        android:layout_above="@+id/ImHereButton"
        android:layout_alignStart="@+id/ImHereButton"
        android:layout_marginBottom="48dp" />
    -->
    <Button
        android:text="Record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:id="@+id/recordingButton"
        android:onClick="recordAudio"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/PanicButton"
        android:onClick="panic"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_panic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PanicButton"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="22pt"/>
</RelativeLayout>